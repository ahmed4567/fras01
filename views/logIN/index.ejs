<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>FRAS Login</title>
    <base href="/">
    <link type="text/css" rel="shortcut icon" href="../logIN/css/icon.png">
    <link type="text/css" rel="stylesheet" href="../logIN/css/all.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>

    <link type="text/css" rel="stylesheet" href="../logIN/css/style.css">
</head>

<body>
    <section>
        <!--Start Navbar-->
        <div class="navbar-info">
            <div class="container">
                <h2>Thebes Academy</h2>
                <span><i class="fas fa-phone-alt"></i> : 0238093013 - 0238093122</span>
            </div>
        </div>
        <!--End Navbar-->
        <div class="cont">
            <div class="container">
                <div class="row">
                    <!--Start Img-->
                    <div class="col-lg-6">
                        <div class="back-img">
                            <img src="../logIN/css/back.png" alt="Thebes Academy">
                            <img class="two" src="../logIN/css/back2.png" alt="Thebes Academy">
                        </div>
                    </div>
                    <!--End Img-->
                    <!--Start Box-->
                    <div class="col-lg-6">
                        <div class="log">
                            <!--Start Signin-->
                            <div class="user signin">
                                <div class="formbox">
                                    <form action="/signIN" method="POST">
                                        <h2 class="text-center">Sign In</h2>
                                        <input type="text" name="user_name" placeholder="Username">
                                        <input type="password" name="password" placeholder="Password">
                                        <input type="submit" value="Login"> <input type="submit" value="face Login">
                                        <span>Don't have an account?<a href="#" onclick="toggleForm();">Sign Up</a></span>
                                    </form>
                                </div>
                            </div>
                            <!--End Signin-->
                            <!--Start SignUp-->
                            <div class="user signup">
                                <div class="formbox">
                                    <form id="signUP" action="/signUP" method="POST">
                                        <h2 class="text-center">Sign Up</h2>
                                        <input type="text" name="stuName" placeholder="Enter Stu Name">
                                        <input type="text" name="stuID" placeholder="Enter StuID">
                                        <input type="email" name="Ua" placeholder="Enter Univercity Account">
                                        <input type="password" name="password" placeholder="Enter Password">
                                        <input type="password" name="adminCode" placeholder="Enter Admin Code">
                                        <input type="submit" value="Sign Up">
                                        <span>Already have an account?<a href="#" onclick="toggleForm();">Sign In</a></span>
                                    </form>
                                </div>
                            </div>
                            <!--End SignUp-->
                        </div>
                    </div>
                    <!--End Box-->
                </div>
            </div>
        </div>
    </section>

    <script>
        function toggleForm() {
            var sing = document.querySelector('.signin');
            sing.classList.toggle('active');
            var up = document.querySelector('.navbar-info');
            up.classList.toggle('active');
            var img = document.querySelector('.two')
            img.classList.toggle('active')
        }
    </script>
</body>

</html>